@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper "Pioneer.Pagination.PioneerPaginationTagHelper, Pioneer.Pagination"
@model LGG.Core.Dtos.GalleryDto
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="content-box-header panel-heading">
    <div class="panel-title ">Tạo mới hình ảnh</div>
</div>
<div class="content-box-large box-with-header">
    <form class="form-horizontal" asp-controller="galleries" asp-action="Update" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group" hidden>
            <label for="galleryId" class="col-sm-2 control-label">Tên hình ảnh</label>
            <div class="col-sm-6">
                <input asp-for="GalleryId" class="form-control height-input" id="galleryId" placeholder="tên hình ảnh">
                <span asp-validation-for="GalleryId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label for="name" class="col-sm-2 control-label">Tên hình ảnh</label>
            <div class="col-sm-6">
                <input asp-for="Name" class="form-control height-input" id="name" placeholder="tên hình ảnh">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label for="description" class="col-sm-2 control-label">Giới thiệu</label>
            <div class="col-sm-6">
                <input asp-for="Description" class="form-control height-input" id="description" placeholder="Hình ảnh nói về điều gì...">
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label for="chude" class="col-sm-2 control-label">Chủ đề</label>
            <div class="col-sm-6">
                <select asp-for="CategoryId" asp-items="ViewBag.Categorys" class="form-control select-text" id="chude"></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label for="mage" class="col-sm-2 control-label">url</label>
            <div class="col-sm-10">
                <input asp-for="Image" class="form-control height-input" id="mage" placeholder="url">
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" class="btn btn-primary" value="Lưu" />
            </div>
        </div>
    </form>
</div>s

