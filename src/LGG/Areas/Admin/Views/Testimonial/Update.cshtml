@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper "Pioneer.Pagination.PioneerPaginationTagHelper, Pioneer.Pagination"
@model LGG.Core.Dtos.TestimonialDto
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="content-box-header panel-heading">
    <div class="panel-title ">Cập nhật chủ đề</div>
</div>
<div class="content-box-large box-with-header">
    <form class="form-horizontal" asp-controller="testimonial" asp-action="Update" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group" hidden>
            <label for="cateid" class="col-sm-2 control-label">Mã Phản Hồi</label>
            <div class="col-sm-6">
                <input asp-for="Id" class="form-control height-input" id="cateid">
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label for="name" class="col-sm-2 control-label">Người phản hồi</label>
            <div class="col-sm-6">
                <input asp-for="Name" class="form-control height-input" id="name" placeholder="">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label for="position" class="col-sm-2 control-label">Chức danh</label>
            <div class="col-sm-10">
                <input asp-for="Position" class="form-control height-input" id="position" placeholder="">
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label for="content" class="col-sm-2 control-label">Nội dung</label>
            <div class="col-sm-10">
                <input asp-for="Content" class="form-control height-input" id="content" placeholder="">
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label for="smallimage" class="col-sm-2 control-label">Ảnh</label>
            <div class="col-sm-10">
                <input asp-for="SmallImage" class="form-control height-input" id="smallimage" placeholder="">
                <span asp-validation-for="SmallImage" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" class="btn btn-primary" value="Lưu" />
            </div>
        </div>
    </form>
</div>

