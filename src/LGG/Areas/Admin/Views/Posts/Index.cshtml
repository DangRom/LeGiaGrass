@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<LGG.Core.Dtos.PostDto>
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content-box-header panel-heading">
    <div class="panel-title ">Danh sách bai viet</div>
</div>
<div class="content-box-large box-with-header">
    <a href="/admin/posts/new"><input type="button" class="btn btn-primary" value="Thêm mới" /></a>
    <br /><br />
    <table id="tablesource" class="display" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>Tên bai viet</th>
                <th>Chu de</th>
                <th>Hien thi</th>
                <th></th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <th>Tên bai viet</th>
                <th>Chu de</th>
                <th>Hien thi</th>
                <th></th>
            </tr>
        </tfoot>
        <tbody>
            @foreach (var m in Model)
            {
                <tr>
                    <td>@m.Title</td>
                    <td>@m.Category.Name</td>
                    <td class="checkbox">@m.Published</td>
                    <td style="text-align: right">
                        <a class="btn btn-primary fa fa-pencil" href="/admin/posts/update/@m.PostId"></a>
                        <a class="btn btn-danger fa fa-trash-o" onclick="del(@m.PostId)"></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <br /><br />
</div>

@section scripts{
    <script type="text/javascript">
        function del(id){
        var c = confirm("Bạn có chắc là không muốn hiển chủ đề này ?");
            if(c){
                $.ajax({
                    url: "/admin/post/delete/" + id,
                    type: "DELETE",
                    dataType: 'json',
                    success: function(mess){
                        window.location.reload();
                    },
                    error: function(error){
                        alert(error);
                    }
                })
            }
        };
    </script>
}