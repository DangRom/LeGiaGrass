@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper "Pioneer.Pagination.PioneerPaginationTagHelper, Pioneer.Pagination"
@model LGG.Core.Dtos.PostDto
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="content-box-header panel-heading">
    <div class="panel-title ">Tạo mới hình ảnh</div>
</div>
<div class="content-box-large box-with-header">
    <form class="form-horizontal" asp-controller="posts" asp-action="New" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label for="Title" class="col-sm-2 control-label">Tiêu đề</label>
            <div class="col-sm-10">
                <input asp-for="Title" class="form-control height-input" id="title">
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label for="Url" class="col-sm-2 control-label">Url</label>
            <div class="col-sm-10">
                <input asp-for="Url" class="form-control height-input" id="url">
                <span asp-validation-for="Url" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label for="Description" class="col-sm-2 control-label">Mô tả ngắn</label>
            <div class="col-sm-10">
                <input asp-for="Description" class="form-control height-input" id="description" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label for="Category.CategoryId" class="col-sm-2 control-label">Chủ đề</label>
            <div class="col-sm-5">
                <select asp-for="Category.CategoryId" asp-items="ViewBag.Categorys" class="form-control select-text" id="category"></select>
                <span asp-validation-for="Category.CategoryId" class="text-danger"></span>
            </div>
        </div>
        @*<div class="form-group">
            <label for="Tag.TagId" class="col-sm-2 control-label">Tag</label>
            <div class="col-sm-10">
                <input asp-for="Tag.TagId" class="form-control height-input" id="tag">
                <span asp-validation-for="Tag.TagId" class="text-danger"></span>
            </div>
        </div>*@
        <div class="form-group">
            <label for="Image" class="col-sm-2 control-label">Ảnh lớn</label>
            <div class="col-sm-10">
                <input asp-for="Image" class="form-control height-input" id="image">
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label for="SmallImage" class="col-sm-2 control-label">Ảnh nhỏ</label>
            <div class="col-sm-10">
                <input asp-for="SmallImage" class="form-control height-input" id="smallimage" />
                <span asp-validation-for="SmallImage" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label for="IconImage" class="col-sm-2 control-label">icon</label>
            <div class="col-sm-10">
                <input asp-for="IconImage" class="form-control height-input" id="IconImage">
                <span asp-validation-for="IconImage" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-3 col-md-4 checkbox">
                <label>
                    <input asp-for="Published" id="published" checked>Xuất Bản
                </label>
            </div>
        </div>
        <div class="form-group">
            <label for="Link" class="col-sm-2 control-label">Link</label>
            <div class="col-sm-10">
                <input asp-for="Link" class="form-control height-input" id="Link" />
                <span asp-validation-for="Link" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label for="Meta" class="col-sm-2 control-label">Meta</label>
            <div class="col-sm-10">
                <input asp-for="Meta" class="form-control height-input" id="meta">
                <span asp-validation-for="Meta" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label for="Excerpt.Content" class="col-sm-2 control-label">Đoạn trích trang home</label>
            <div class="col-sm-10">
                <input asp-for="Excerpt.Content" class="form-control height-input" id="content">
                <span asp-validation-for="Excerpt.Content" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label for="Article.Content" class="col-sm-2 control-label">Nội dung</label>
            <div class="col-sm-10">
                <textarea asp-for="Article.Content"></textarea>
                <span asp-validation-for="Article.Content" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" class="btn btn-primary" value="Lưu" />
            </div>
        </div>
    </form>
</div>

