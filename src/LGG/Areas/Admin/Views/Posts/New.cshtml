@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper "Pioneer.Pagination.PioneerPaginationTagHelper, Pioneer.Pagination"
@model LGG.Core.Dtos.PostDto
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="content-box-header panel-heading">
    <div class="panel-title ">Tạo mới hình ảnh</div>
</div>
<div class="content-box-large box-with-header">
    <form class="form-horizontal" asp-controller="galleries" asp-action="New" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label for="Title" class="col-sm-2 control-label">Tieu de</label>
            <div class="col-sm-10">
                <input asp-for="Title" class="form-control height-input" id="title">
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label for="Url" class="col-sm-2 control-label">Giới thiệu</label>
            <div class="col-sm-10">
                <input asp-for="Url" class="form-control height-input" id="url">
                <span asp-validation-for="Url" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label for="Description" class="col-sm-2 control-label">Mo ta ngan</label>
            <div class="col-sm-10">
                <select asp-for="Description" asp-items="ViewBag.Categorys" class="form-control select-text" id="description"></select>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label for="Category.CategoryId" class="col-sm-2 control-label">Chu de</label>
            <div class="col-sm-10">
                <input asp-for="Category.CategoryId" class="form-control height-input" id="category">
                <span asp-validation-for="Category.CategoryId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label for="Tag.TagId" class="col-sm-2 control-label">Tên hình ảnh</label>
            <div class="col-sm-10">
                <input asp-for="Tag.TagId" class="form-control height-input" id="tag">
                <span asp-validation-for="Tag.TagId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label for="Image" class="col-sm-2 control-label">Anh lon</label>
            <div class="col-sm-10">
                <input asp-for="Image" class="form-control height-input" id="image">
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label for="SmalImage" class="col-sm-2 control-label">Anh nho</label>
            <div class="col-sm-10">
                <select asp-for="SmalImage" asp-items="ViewBag.Categorys" class="form-control select-text" id="smallimage"></select>
                <span asp-validation-for="SmalImage" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label for="IconImage" class="col-sm-2 control-label">icon</label>
            <div class="col-sm-10">
                <input asp-for="IconImage" class="form-control height-input" id="IconImage">
                <span asp-validation-for="IconImage" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label for="name" class="col-sm-2 control-label">Tên hình ảnh</label>
            <div class="col-sm-10">
                <input asp-for="Name" class="form-control height-input" id="name" placeholder="tên hình ảnh">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-4 checkbox">
                    <label>
                        <input asp-for="Published" id="published" checked>Xuất Bản
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label for="Link" class="col-sm-2 control-label">Link</label>
            <div class="col-sm-10">
                <select asp-for="Link" asp-items="ViewBag.Categorys" class="form-control select-text" id="Link"></select>
                <span asp-validation-for="Link" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label for="Meta" class="col-sm-2 control-label">Meta</label>
            <div class="col-sm-10">
                <input asp-for="Meta" class="form-control height-input" id="meta">
                <span asp-validation-for="Meta" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label for="Excerpt.Id" class="col-sm-2 control-label">Doan trich</label>
            <div class="col-sm-10">
                <input asp-for="Excerpt.Id" class="form-control height-input" id="Excerpt.Id">
                <span asp-validation-for="Excerpt.Id" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label for="Excerpt.Id" class="col-sm-2 control-label">Doan trich</label>
            <div class="col-sm-10">
                <input asp-for="Excerpt.Id" class="form-control height-input" id="Excerpt.Id">
                <span asp-validation-for="Excerpt.Id" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" class="btn btn-primary" value="Lưu" />
            </div>
        </div>
    </form>
</div>

