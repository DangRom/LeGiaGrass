@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper "Pioneer.Pagination.PioneerPaginationTagHelper, Pioneer.Pagination"
@model LGG.Core.Dtos.CategoryDto
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="content-box-header panel-heading">
    <div class="panel-title ">Tạo mới chủ đề</div>
</div>
<div class="content-box-large box-with-header">
    <form class="form-horizontal" asp-controller="categories" asp-action="New" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label for="name" class="col-sm-2 control-label">Tên chủ đề</label>
            <div class="col-sm-6">
                <input asp-for="Name" class="form-control height-input" id="name" placeholder="Blog, Service, Event, Slide, Difference, Testimonial, Gallery...">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label for="url" class="col-sm-2 control-label">url</label>
            <div class="col-sm-10">
                <input asp-for="Url" class="form-control height-input" id="url" placeholder="url">
                <span asp-validation-for="Url" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" class="btn btn-primary" value="Lưu" />
            </div>
        </div>
    </form>
</div>

