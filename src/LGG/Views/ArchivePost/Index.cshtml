@{
    Layout = "~/Views/Shared/ArchivePost/_Template.cshtml";
}
@model List<PostDto>
<div class="hero-gradient hg-small" style="background-image: url(/images/hero-archive-post.jpg)">
    <div class="row hero-gradient-content">
        <div class="large-12 column">
            <h1>@ViewBag.Header</h1>
            <div class="bar"></div>
        </div>
    </div>
</div>
<section class="archive">
    <div class="row">
        <div class="large-8 columns">
            @Html.Partial("ArchivePost/_ArchivePost", Model)
            <pioneer-pagination info="@ViewBag.PaginatedMeta" route="/@ViewBag.Pager"></pioneer-pagination>
        </div>
        <aside class="large-4 columns">
            <div class="hide-for-small-only">
                @Html.Partial("ArchivePost/_SidebarTitle", "Popular Posts")
                @Html.Partial("ArchivePost/_SidebarPopularPosts", (List<PostDto>)ViewBag.PopularPosts)
            </div>
            <div class="hide-for-small-only">
                @Html.Partial("ArchivePost/_SidebarTitle", "New Posts")
                @Html.Partial("ArchivePost/_SidebarNewPosts", (List<PostDto>)ViewBag.NewPosts)
            </div>
            <div class="hide-for-small-only">
                @Html.Partial("ArchivePost/_SidebarTitle", "Search!")
                <section class="sidebar">
                    @Html.Partial("_SearchBar")
                </section>
            </div>
            <div class="follow-us-on hide-for-small-only">
                @Html.Partial("ArchivePost/_SidebarTitle", "Follow Me @!")
                @Html.Partial("ArchivePost/_SidebarFollowUs")
            </div>
            <div class="hide-for-small-only">
                @Html.Partial("ArchivePost/_SidebarTitle", "Tags")
                @Html.Partial("ArchivePost/_SidebarTags", (List<TagDto>)ViewBag.Tags)
            </div>
            <div class="hide-for-small-only">
                @Html.Partial("ArchivePost/_SidebarTitle", "Categories")
                @Html.Partial("ArchivePost/_SidebarCategories", (List<CategoryDto>)ViewBag.Categories)
            </div>
        </aside>
    </div>
</section>
