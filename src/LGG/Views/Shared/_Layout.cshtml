@{
    var company = (CompanyDto)ViewBag.Company;
    var services = (List<PostDto>)ViewBag.Services;
}
<!DOCTYPE html>
<html lang="vi">

<head>
    <!-- Basic -->
    <meta charset="utf-8">
    <title>Le Gia - Grass</title>
    <meta name="keywords" content="LeGia Grass" />
    <meta name="description" content="Le Gia Grass">
    <meta name="author" content="legiagrass.com">
    <link rel="shortcut icon" href="~/favicon.ico">
    <!-- Mobile Specific Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- jQuery 1.10.1-->
    <script src="~/vendor/jquery/jquery.js"></script>
    <!-- Icon Fonts  -->
    <link rel="stylesheet" href="~/css/style.css">
    <!-- Vendor CSS -->
    <link rel="stylesheet" href="~/vendor/waves/waves.css">
    <link rel="stylesheet" href="~/vendor/slick/slick.css">
    <link rel="stylesheet" href="~/vendor/slick/slick-theme.css">
    <link rel="stylesheet" href="~/vendor/magnific-popup/magnific-popup.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/fonts/style.css">
    <!-- Custom Fonts -->
    <link href='https://fonts.googleapis.com/css?family=Roboto:300,400,500,700' rel='stylesheet' type='text/css'>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i" rel="stylesheet">
    <!-- SLIDER REVOLUTION 4.x CSS SETTINGS -->
    <link rel="stylesheet" type="text/css" href="~/vendor/rs-plugin/css/settings.css" media="screen" />
    <!-- Head Libs -->
    <!--[if IE]>
    <link rel="stylesheet" href="css/ie.css">
    <![endif]-->
    <!--[if lte IE 8]>
    <script src="~/vendor/respond/respond.js"></script>
    <script src="~/vendor/excanvas/excanvas.js"></script>
    <![endif]-->
    <!-- Vendor -->
    <!-- jQuery 1.10.1-->
    <script src="~/vendor/jquery/jquery.js"></script>
    <!-- Bootstrap 3-->
    <script src="~/vendor/bootstrap/bootstrap.min.js"></script>
    <!-- Modernizr -->
    <script src="~/vendor/modernizr/modernizr.js"></script>
    @RenderSection("scriptHead", false)

</head>

<body class="@(ViewBag.Selected == "contact" ? "selected" : "")">

    @RenderSection("loaderWrapper", false)
    <!-- Modal Search -->
    <!--TODO: Tìm kiếm-->
    @*<div class="overlay overlay-scale">
            <button type="button" class="overlay-close"> ✕ </button>
            <div class="overlay__content">
                <form id="search-form" class="search-form outer" action="#" method="post">
                    <div class="input-group input-group--wd">
                        <input type="text" class=" input--full" placeholder="search text here ...">
                    </div>
                    <button class="btn btn--wd text-uppercase wave waves-effect">Search</button>
                </form>
            </div>
        </div>*@
    <!-- / end Modal Search -->

    <div class="wrapper">
        <!-- Header section -->
        <header class="header header--max header--sticky">
            <nav class="navbar navbar-wd" id="navbar">
                <div class="navbar-header">
                    <div class="container">
                        <button type="button" class="navbar-toggle" id="slide-nav"><i class="icon icon-menu"></i></button>
                        <div class="row">
                            <div class="col-sm-3 col-lg-3">
                                <!--  Logo  -->
                                <a class="logo" href="/"> <img class="logo-default" src="@(!string.IsNullOrEmpty(company.Logo)?company.Logo:"/images/logo.png")" alt="" /> <img class="logo-mobile" src="@(!string.IsNullOrEmpty(company.Logo)?company.Logo:"/images/logo.png")" alt="" /> </a>
                                <!-- End Logo -->
                            </div>
                            <div class="visible-lg col-lg-3">
                                <div class="slogan"> @company.Sologan </div>
                            </div>
                            <div class="col-sm-6 col-lg-4">
                                <div class="phone">
                                    <div><span class="custom-color hidden-xs">GỌI NGAY: </span> <span class="phone-number">@company.Hotline</span><i class="icon icon-telephone"></i></div>
                                    <div class="phone-sm hidden-xs">@company.TimeWork</div>
                                </div>
                            </div>
                            <div class="col-sm-3 col-lg-2">
                                <div class="social-links">
                                    <ul>
                                        <li>
                                            <a class="icon icon-twitter-logo-button" href="@company.Twitter"></a>
                                        </li>
                                        <li>
                                            <a class="icon icon-facebook-logo-button" href="@company.Facebook"></a>
                                        </li>
                                        <li>
                                            <a class="icon icon-google-plus" href="@company.Google"></a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        @*<div class="header__search"> <a href="#" class="search-open"><span class="icon icon-magnifying-glass"></span></a> </div>*@
                    </div>
                </div>
                <div id="slidemenu">
                    <div class="slidemenu-close visible-xs">✕</div>
                    <div class="container">
                        <ul class="nav navbar-nav">
                            <li class="@((string)ViewBag.Selected == "home" ? "active" : "")"><a href="/"><span class="link-name">Trang Chủ</span></a></li>
                            <li>
                                <a href="#" class="dropdown-toggle"><span class="link-name">Dịch Vụ</span><span class="caret icon-angle-down"></span></a>
                                <ul class="dropdown-menu animated fadeIn" role="menu">
                                    @foreach (var menu in services)
                                    {
                                        <li class="@((string)ViewBag.Selected == "service" ? "active" : "")"><a href="/service/@(menu.Url)">@(menu.Title)</a></li>
                                    }
                                </ul>
                            </li>
                            @*<li><a href="pricing.html"><span class="link-name">Báo Giá</span></a></li>*@
                            <li class="@((string)ViewBag.Selected == "blog" ? "active" : "")"><a href="/blog" class="link-name"><span class="link-name">Tin Tức</span></a></li>
                            @*<li><a href="gallery.html"><span class="link-name">Gallery</span></a></li>*@
                            @*<li><a href="maintenance.html"><span class="link-name">Bảo Trì</span></a></li>*@
                            @*<li><a href="shop.html"><span class="link-name">Shop</span></a></li>*@
                            @*<li><a href="testimonial.html"><span class="link-name">Chứng Thực</span></a></li>*@
                            <li class="@((string)ViewBag.Selected == "About" ? "active" : "")"><a href="/about"><span class="link-name">Về Chúng Tôi</span></a></li>
                            <li class="@((string)ViewBag.Selected == "contact" ? "active" : "")"><a href="/contact"><span class="link-name">Liên Hệ</span></a></li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        <!-- End Header section -->

        <div id="pageContent" class="page-content">
            @RenderBody()
            <div class="page-bot"><img src="~/images/under-footer.png" class="img-responsive" alt=""></div>
        </div>

        <footer class="footer">
            @RenderSection("footerPart", false)
            <div class="footer__column-links">
                <div class="back-to-top"><a href="#top"><span class="icon-tree"></span></a></div>
                <div class="container">
                    <div class="row">
                        <div class="col-sm-6 col-md-3"> <img src="~/images/guarantee.png" class="img-responsive" alt="" /> </div>
                        <div class="col-sm-6 col-md-3 mobile-collapse">
                            <h5 class="title mobile-collapse__title">Thông Tin </h5>
                            <div class="v-links-list mobile-collapse__content">
                                <ul>
                                    <li><a href="#">FAQ</a></li>
                                    <li><a href="#">Locations</a></li>
                                    <li><a href="#">Testimonials</a></li>
                                    <li><a href="#">Careers</a></li>
                                    <li><a href="#">Partners</a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-sm-6 col-md-3 mobile-collapse">
                            <h5 class="title mobile-collapse__title">Service</h5>
                            <div class="v-links-list mobile-collapse__content">
                                <ul>
                                    @*<li><a href="#">Site Map</a></li>*@
                                    <li><a href="/about/@(AboutType.About)">Về Chúng Tôi</a></li>
                                    <li><a href="/about/@(AboutType.Privacy)">Privacy</a></li>
                                    <li><a href="/about/@(AboutType.TermsOfUse)">Terms of Use</a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-sm-6 col-md-3 mobile-collapse mobile-collapse--last">
                            <h5 class="title mobile-collapse__title">Thông Tin Công Ty</h5>
                            <div class="v-links-list mobile-collapse__content">
                                <ul>
                                    <li>@company.Address</li>
                                    <li><a href="mailto:@(company.Email)">@company.Email</a></li>
                                    <li>@company.Website</li>
                                    <li>@company.Hotline</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="footer__bottom">
                <div class="container">
                    <div class="pull-right col-sm-6 col-md-3 col-lg-3">
                        <div class="social-links">
                            <ul>
                                <li>
                                    <a class="icon icon-twitter-logo-button" href="@company.Twitter"></a>
                                </li>
                                <li>
                                    <a class="icon icon-facebook-logo-button" href="@company.Facebook"></a>
                                </li>
                                <li>
                                    <a class="icon icon-google-plus" href="@company.Google"></a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="pull-right col-sm-6 col-md-5 col-lg-4">
                        <div class="phone">
                            <div><span class="custom-color hidden-xs">GỌI NGAY: </span> <span class="phone-number">@company.Hotline</span><i class="icon icon-telephone"></i></div>
                            <div class="phone-sm">@company.TimeWork</div>
                        </div>
                    </div>
                    <div class="pull-left col-sm-12 col-md-3 col-lg-4">
                        <div class="copyright">© 2017 <a href="#">@company.Name</a>.</div>
                    </div>
                </div>
            </div>
        </footer>
    </div>
    @RenderSection("modalForm", false)
    <environment names="Development">

        <!-- Specific Page Vendor -->
        <script src="~/vendor/waves/waves.min.js"></script>
        <script src="~/vendor/slick/slick.min.js"></script>
        <script src="~/vendor/parallax/jquery.parallax-1.1.3.js"></script>
        <script src="~/vendor/waypoints/jquery.waypoints.min.js"></script>
        <script src="~/vendor/waypoints/sticky.min.js"></script>
        <script src="~/vendor/doubletaptogo/doubletaptogo.js"></script>
        <script src="~/vendor/imagesloaded/imagesloaded.pkgd.min.js"></script>
        <script src="~/vendor/isotope/isotope.pkgd.min.js"></script>
        <script src="~/vendor/magnific-popup/jquery.magnific-popup.min.js"></script>
        <!-- jQuery form validation -->
        <script src="~/vendor/form/jquery.form.js"></script>
        <script src="~/vendor/form/jquery.validate.min.js"></script>
        <!-- Custom -->
        <script src="~/js/custom.js"></script>
    </environment>
    <environment names="Staging,Production">
        <!-- Vendor -->
        <!-- Bootstrap 3-->
        <script src="vendor/bootstrap/bootstrap.min.js"></script>
        <!-- Specific Page Vendor -->
        <script asp-append-version="true" src="~/vendor/waves/waves.min.js"></script>
        <script asp-append-version="true" src="~/vendor/slick/slick.min.js"></script>
        <script asp-append-version="true" src="~/vendor/parallax/jquery.parallax-1.1.3.js"></script>
        <script asp-append-version="true" src="~/vendor/waypoints/jquery.waypoints.min.js"></script>
        <script asp-append-version="true" src="~/vendor/waypoints/sticky.min.js"></script>
        <script asp-append-version="true" src="~/vendor/doubletaptogo/doubletaptogo.js"></script>
        <script asp-append-version="true" src="~/vendor/imagesloaded/imagesloaded.pkgd.min.js"></script>
        <script asp-append-version="true" src="~/vendor/isotope/isotope.pkgd.min.js"></script>
        <script asp-append-version="true" src="~/vendor/magnific-popup/jquery.magnific-popup.min.js"></script>
        <!-- jQuery form validation -->
        <script asp-append-version="true" src="~/vendor/form/jquery.form.js"></script>
        <script asp-append-version="true" src="~/vendor/form/jquery.validate.min.js"></script>
        <!-- Custom -->
        <script asp-append-version="true" src="~/js/custom.js"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>