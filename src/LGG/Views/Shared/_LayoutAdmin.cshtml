<!DOCTYPE html>
<html>
<head>
    <title>Bootstrap Admin Theme v3</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap -->
    <link href="~/admin/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <!-- styles -->
    <link href="~/admin/css/styles.css" rel="stylesheet">
    <link href="~/admin/css/styleform.css" rel="stylesheet" asp-append-version="true" />
    <link href="https://cdn.datatables.net/1.10.15/css/jquery.dataTables.min.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/admin/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <script src="~/js/bootbox.min.js" asp-append-version="true"></script>
    <script src="~/admin/bootstrap/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="header">
        <div class="container">
            <div class="row">
                <div class="col-md-5">
                    <!-- Logo -->
                    <div class="logo">
                        <h1><a href="index.html">LeGia | Admin</a></h1>
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="input-group form">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="navbar navbar-inverse" role="banner">
                        <nav class="collapse navbar-collapse bs-navbar-collapse navbar-right" role="navigation">
                            <ul class="nav navbar-nav">
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">My Account <b class="caret"></b></a>
                                    <ul class="dropdown-menu animated fadeInUp">
                                        <li><a href="profile.html">Profile</a></li>
                                        <li><a href="login.html">Logout</a></li>
                                    </ul>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="page-content">
        <div class="row">
            <div class="col-md-2">
                <div class="sidebar content-box" style="display: block;">
                    <ul class="nav">
                        <!-- Main menu -->
                        <li class="current"><a href="/admin/companies"><i class="glyphicon glyphicon-home"></i>Công ty</a></li>
                        <li class="current"><a href="/admin/categories"><i class="glyphicon glyphicon-calendar"></i>Chủ đề</a></li>
                        <li class="current"><a href="/admin/tags"><i class="glyphicon glyphicon-stats"></i>Tags</a></li>
                        <li class="current"><a href="/admin/galleries"><i class="glyphicon glyphicon-list"></i>Hình ảnh</a></li>
                        <li class="current"><a href="/admin/posts"><i class="glyphicon glyphicon-record"></i>Bài viết</a></li>
                    </ul>
                </div>
            </div>
            <div class="col-md-10">
                <div class="row">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://code.jquery.com/jquery.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="~/admin/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/admin/js/custom.js"></script>
    <!--tinyMCE-->
    <script src="~/admin/tinymce/js/tinymce/tinymce.min.js"></script>
    <script src="~/admin/tinymce/js/tinymce/jquery.tinymce.min.js"></script>
    <script src="~/admin/tinymce/js/tinymce/tinyMceConfig.js"></script>

    <!--datatable-->
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
    <script src="~/admin/configTable.js"></script>
    @RenderSection("Scripts", false)
</body>
</html>

