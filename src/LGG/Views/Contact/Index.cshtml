
@{
    ViewData["Title"] = "Contact";
    Layout = "~/Views/Shared/_LayoutContact.cshtml";
}

@model  LGG.Core.ViewModels.ContactViewModel

<!-- Content section -->
<section class="content content--fill content--fill--light top-null bottom-null fullwidth">
    <h2 class="text-center lined">Contact Us</h2>
    <div id="map"></div>
</section>
<section class="content content--fill content--fill--light top-null">
    <div class="container">
        <div class="row">
            <div class="col-sm-1 visible-lg"></div>
            <div class="col-sm-3">
                <div class="address">
                    <div class="pull-right"><img src="~/images/logo.png" class="img-responsive" alt="" /></div>
                    <div class="divider divider--sm"></div>
                    <div class="text-right">
                        <h6>Our address:</h6> Envato Level 13, 2 Elizabeth
                        <br> St, Melbourne, Victoria 3000
                        <br> Australia
                    </div>
                    <div class="divider divider--sm"></div>
                    <div class="text-right">
                        <h6>Call us:</h6> +1-234-567-890
                    </div>
                    <div class="divider divider--sm"></div>
                    <div class="text-right">
                        <h6>Have any questions?</h6> <a href="mailto:info@mydomain.com">noreply@envato.com</a>
                        <br> <a href="http://www.envato.com">www.envato.com</a>
                    </div>
                    <div class="divider divider--md"></div>
                    <div class="social-links lg">
                        <ul>
                            <li>
                                <a class="icon icon-twitter-logo-button" href="#"></a>
                            </li>
                            <li>
                                <a class="icon icon-facebook-logo-button" href="#"></a>
                            </li>
                            <li>
                                <a class="icon icon-instagram-logo" href="#"></a>
                            </li>
                        </ul>
                        <ul>
                            <li>
                                <a class="icon icon-google-plus" href="#"></a>
                            </li>
                            <li>
                                <a class="icon icon-social" href="#"></a>
                            </li>
                            <li>
                                <a class="icon icon-linkedin-logo-button" href="#"></a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-sm-1 visible-lg"></div>
            <div class="col-sm-7">
                @*Dung script form submit id=contactform*@
                <form asp-controller="Contact" asp-action="Send" method="post" class="contact-form" name="contactform" novalidate>
                    @*<div id="success">
                            <p>Your message was sent successfully!</p>
                        </div>
                        <div id="error">
                            <p>Something went wrong, try refreshing and submitting the form again.</p>
                        </div>*@
                    @if (!ViewBag.IsValid)
                    {
                        <div class="callout alert">
                            <div asp-validation-summary="All"></div>
                        </div>
                    }
                    @if (ViewBag.MessageSent != null && ViewBag.MessageSent)
                    {
                        <div class="callout success">
                            <p>Đã gửi! Chúng tôi sẽ phản hồi cho bạn sớm nhất có thể.</p>
                        </div>
                    }
                    <div class="inputs-col">
                        <div class="input-wrapper">
                            <label>Họ Tên <span class="required">*</span></label>
                            <input asp-for="Name" type="text" class="input--wd input--full" name="name" placeholder="Tên của bạn">
                        </div>
                        <div class="input-wrapper">
                            <label>Điện Thoại</label>
                            <input asp-for="Phone" type="text" class="input--wd input--full" name="phone" placeholder="(+84) 123 456 789">
                        </div>
                        <div class="input-wrapper">
                            <label>Email</label>
                            <input asp-for="Email" type="text" class="input--wd input--full" name="email" placeholder="mymail@domain.com">
                        </div>
                        <div class="input-wrapper">
                            <label>Tiêu Đề</label>
                            <input asp-for="Subject" type="text" class="input--wd input--full" name="subject">
                        </div>
                    </div>
                    <div>
                        <label>Nội Dung</label>
                        <textarea asp-for="Message" class="textarea--wd input--full" name="message"></textarea>
                    </div>
                    <div class="divider divider--xs"></div>
                    <input type="submit" class="btn btn--wd" value="Gửi" />
                </form>
            </div>
        </div>
    </div>
</section>
<div class="page-bot"><img src="~/images/under-footer.png" class="img-responsive" alt=""></div>
<!-- End Content section -->