@{
    ViewBag.Title = Model[(int)PreviousCurrentNextPosition.Current].Title;
    Layout = "~/Views/Shared/_LayoutSub.cshtml";
    var company = (CompanyDto)ViewBag.Company;
}
@model List<PostDto>
<section class="breadcrumbs">
    <div class="container">
        <ol class="breadcrumb breadcrumb--wd pull-left">
            <li><a href="/">Trang Chủ</a></li>
            <li class="active">@BaseCategoryName.Service.GetDescription()</li>
        </ol>
    </div>
</section>

<!-- Content section -->
<section class="content content--fill content--fill--light top-null">

    <div class="container">
        <h1 class="text-center lined">@BaseCategoryName.Service.GetDescription()</h1>
        <div class="row">
            <div class="col-md-12 column-center">
                @Html.Raw(Model[(int)PreviousCurrentNextPosition.Current].Article?.Content)
            </div>
        </div>
    </div>
</section>
<!-- End Content section -->
